{
	"name": "PowerMate - Raspberry",
	"image": "mcr.microsoft.com/devcontainers/base:jammy",
	"features": {
		"ghcr.io/devcontainers/features/python:1": {
			"installTools": true,
			"installJupyterlab": true,
			"version": "3.11"
		}
	},
	"postCreateCommand": "pip install -r requirements.txt",
	"customizations": {
		"vscode": {
			"extensions": [
				"redhat.vscode-yaml",
				"ms-python.pylint"
			]
		}
	}
}
